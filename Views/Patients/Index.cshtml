@model PagedList.IPagedList<RCCClinic.Models.Patient>

@{
    ViewBag.Title = "Patient - RCC Clinic";
}
<link href="~/Content/PagedList.css" rel="stylesheet" type="text/css" />
@using PagedList.Mvc;


<h2>Patients</h2>
<style>
    td {
    }
</style>
<p>
    @Html.ActionLink("Create New", "Create")
</p>
@using (Html.BeginForm())
{
    <div class="form-group">

        <div class="col-md-4">
            <input type="text" placeholder="Search by patient Name" name="txtSearch" class="form-control" />

        </div>
        <div class="col-md-4">
            <input type="text" placeholder="Search by Mobile Number" name="txtMobile" class="form-control" />

        </div>
        <div class="col-md-4">
            <input type="date" name="txtBookedOn" class="form-control" />

        </div>
    </div>

    <div class="form-group">
        <div class="col-md-12" style="margin-top:15px;margin-bottom:15px;">
            <button class="btn btn-primary col-md-12">
                <i class="glyphicon glyphicon-search"></i>
                Search
            </button>
        </div>
    </div>

}

<table class="table table-hover">
    <tr>
        <th>
            @Html.ActionLink("Name", "Index", new { sortOrder = ViewBag.NameSortParm })


        </th>
        <th>
          Address
        </th>
        <th>
            Mobile
        </th>
        <th>
            CC
        </th>
        <th>
            Gender
        </th>
        <th>
           age
        </th>
        <th>
            @Html.ActionLink("BookedOn", "Index", new { sortOrder = ViewBag.DateSortParm })

        </th>
        <th>
           Smoking
        </th>
        <th>
          Allergies
        </th>
        <th>
            DM
        </th>
        <th>
            @Html.DisplayName("Med")
        </th>
        <th>
         HTN
        </th>
        <th>
            Pain
        </th>
        <th>
         Alcohol
        </th>
        <th>
        Note
        </th>
        <th>
           Imagefile
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Address)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Mobile)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CC)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Gender)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.age)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.BookedOn)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Smoking)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Allergies)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DM)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Medication)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.HTN)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Pain)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Alcohol)
            </td>
            <td>
                <a href="@Url.Action("GetNote",new { id = item.ID })">
                    Click Here
                </a>
            </td>
            <td>
                <a href="@Url.Action("GetImage",new { id = item.ID })">
                    <img src="~/Images/@item.Imagefile" alt="" width="50" height="50" />
                </a>

            </td>
            <td>
                <a href="@Url.Action("Edit",new { id = item.ID })" title="Edit">
                    <span class="glyphicon glyphicon-edit" style="color:lightgreen;font-size:20px"></span>
                </a>
                <a href="@Url.Action("Details",new { id = item.ID })" title="Details">
                    <span class="glyphicon glyphicon-list-alt" style="font-size:20px"></span>
                </a>
                <a href="@Url.Action("Delete",new { id = item.ID })" title="Remove">
                    <span class="glyphicon glyphicon-remove" style="color:red;font-size:20px"></span>
                </a>

            </td>
        </tr>
    }

</table>
<br />
Page @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) of @Model.PageCount

@Html.PagedListPager(Model, page => Url.Action("Index",
    new { page, sortOrder = ViewBag.CurrentSort, currentFilter = ViewBag.CurrentFilter }))
