@model mvc_najehacademy.Models.User
@{
    ViewBag.Title = "Login";
}

<h2>Login</h2>


@using (Html.BeginForm())
{
    <div class="form-group">
        <label>Email</label>
        @Html.TextBox("Email", null, new { @class = "form-control", placeholder = "Enter your email address" })
        @*@Html.TextBoxFor(x => x.Email,
                new { @class = "form-control", placeholder = "Enter your email address" })
            <input type="email" name="Email" class="form-control" placeholder="enter your email address"/>*@
        @Html.ValidationMessage("Email", new { @class = "text-danger" })
    </div>
    <div class="form-group">
        <label>Password</label>
        @Html.Password("Password", null, new { @class = "form-control", placeholder = "Enter your Password", id = "pwd" })
        @Html.ValidationMessageFor(x => x.Password, null, new { @class = "text-danger" })
    </div>

    <div class="form-group">
        <label>Roles</label>
        @foreach (var item in ViewBag.RoleID)
        {
            <div class="checkbox">
                @Html.RadioButtonFor(x => x.RoleRoleID, ((SelectListItem)item).Value)
                @Html.Label("Rolename", ((SelectListItem)item).Text)
            </div>
        }


    </div>



    <div class="form-group">
        <button class="btn btn-success">
            <i class="glyphicon glyphicon-user"></i>
            Login
        </button>

    </div>


    if (ViewBag.msgerr != null)
    {
        @ViewBag.msgerr
    }

    if (ViewBag.userinfo != null)
    {
        @ViewBag.userinfo
    }



}


