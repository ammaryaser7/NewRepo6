<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - RCC Clinic </title>
    <link href="~/Content/Site.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <script src="~/Scripts/modernizr-2.8.3.js"></script>
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("RCC Clinic", "Index", "User", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Home", "Index", "User") </li>

                    @if (Session["info"] == null)
                    {
                        <li>@Html.ActionLink("SignUp", "Register", "User") </li>
                        <li>@Html.ActionLink("SignIn", "Login", "User") </li>

                    }
                    else
                    {
                        <li>@Html.ActionLink("Patient", "index", "patients") </li>
                    }
                </ul>
                <ul class="nav navbar-nav navbar-right">
                    @if (Session["info"] != null)
                    {
                        <li>
                            @Html.ActionLink("Welcome, " + ((RCCClinic.Models.User)Session["info"]).Email, "Login", "User")
                        </li>
                        <li>
                            @Html.ActionLink("Logout", "Signout", "user")
                        </li>
                    }
                    </ul>

            </div>
        </div>
    </div>

    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Developed By Ammar Yaser, Email:Ammar.net@outlook.com</p>
        </footer>
    </div>

    <script src="~/Scripts/jquery-3.4.1.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
</body>
</html>